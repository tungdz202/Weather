<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back5"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_marginLeft="2dp"
            android:id="@+id/edittextSearch"
            android:hint="City, State"
            android:layout_width="275dp"
            android:layout_height="48dp"/>

        <Button
            android:backgroundTint="#add8e6"
            android:layout_marginLeft="10dp"
            android:text="OK"
            android:id="@+id/butttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="2dp"
        android:textSize="25dp"
        android:text=" Thành phố: "
        android:id="@+id/textviewtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="2dp"
        android:textSize="30dp"
        android:text=" Quốc gia: "
        android:id="@+id/textviewCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/textViewTemp"
        android:layout_gravity="center"
        android:textColor="#F1A0A0"
        android:text="Nhiệt Độ: "
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textViewStatus"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:text="trạng thái"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:src="@drawable/ic_doam" />
            <TextView
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="Độ ẩm"
                android:id="@+id/textviewDoam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:src="@drawable/cloud2" />

            <TextView
                android:id="@+id/textviewmay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/may"
                android:textSize="20dp" />


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:src="@drawable/ic_speed" />
            <TextView
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="Tốc độ gió"
                android:id="@+id/textviewtdgio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Ngày cập nhật"
        android:id="@+id/textviewDay"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:backgroundTint="#add8e6"
        android:id="@+id/buttonActivity"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:text="các ngày tiếp theo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>